<% content_for(:title, "Product") %>
<h1><%= @product.name %></h1>
<h3><%= @product.country %></h3>
<h2><%= @product.price %></h2>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.content_body %> with a rating of <%= review.rating %> from <%= review.author %>
        <%= link_to "Edit", edit_product_review_path(@product, review) %> |
        <%= link_to "Delete", product_review_path(@product, review),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<button class="btn btn-success"><p><%= link_to "Add a review", new_product_review_path(@product) %></p></button>
<button class="btn btn-danger"><p><%= link_to "Delete List", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p></button>

<button class="btn btn-info"><p><%= link_to "Return to products", products_path %></p></button>
